<% layout('layouts/boilerplate')%>
<body style="background-image: url(https://images.unsplash.com/photo-1502239608882-93b729c6af43?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80);">
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow bg-transparent">
                    <!-- <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                        alt="" class="card-img-top" /> -->
                    <div class="card-body">
                        <h5 class="card-title" style="color: rgb(126, 126, 126); font-family: Arial, Helvetica, sans-serif; font-weight: bold;">R E G I S T E R</h5>
                        <form action="/register" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <!-- <label class="form-label" for="username">Username</label> -->
                                <input class="form-control" type="text" id="username" name="username" required autofocus placeholder="Enter User Name">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <!-- <label class="form-label" for="email">Email</label> -->
                                <input class="form-control" type="email" id="email" name="email" required placeholder="Enter Email">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="mb-3">
                                <!-- <label class="form-label" for="password">Password</label> -->
                                <input class="form-control" type="password" id="password" name="password" required placeholder="Enter Password">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="btn btn-success btn-block">Register</button>
                        </form>
                        <a class="nav-link" style="color: rgb(126, 126, 126);" href="/login">Already Exits ?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>